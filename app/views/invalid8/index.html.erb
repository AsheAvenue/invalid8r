<form action="/invalid8" method="post">
      <div>
          <h3>Site</h3>
          <select name="sitekey">
              <% @options.each do |key| %>
                <option value="<%= key %>"><%= key %></option>
              <% end %>
          </select>
      </div>
      <div>
          <h3>Path</h3>
          <input name="path" type="text" class="input-xxlarge" placeholder="/path/to/invalidate">
      </div>
      <div>
          <button type="submit" class="btn">Invalidate</button>
      </div>
  </form>